<h1>List of Tweets</h1>

<table>
	<tr>
		<th>Status</th>
		<th>Zombie</th>
	</tr>
	
	<% @tweets.each do |tweet| %>
		<tr>
			<td><%= tweet.status %></td>
			<td><%= link_to tweet.zombie.name, tweet.zombie %></td>
			<td><%= link_to "Edit", edit_tweet_path(tweet.zombie) %></td>
			<td><%= link_to "Delete", tweet, confirm: "Are you sure?", method: 'delete' %></td>
		</tr>
	<% end %>
</table>

<%= link_to "Compose new Tweet", new_tweet_path %>			